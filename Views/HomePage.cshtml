@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.HomePage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}

<!-- promo slider html -->
@Html.Partial("promoSlider")
<!-- end promo slider html -->

		
 <div class="container marketing">
	<div class="row">
		<h1>Awesomeness for everyone!</h1>
		<div class="col-md-6">
			@Umbraco.Field("bodyText")
			<p><a class="btn btn-info" href="#" role="button">Read More &raquo;</a></p>
		</div>

		<div class="col-md-6">
			<div class="col-sm-6 block-odd about-blocks" style="background-image:url('/images/HQ_0413.jpg');"></div>
			<div class="col-sm-6 block-even about-blocks" style="background-image:url('/images/HQ_9953.jpg');"></div>
			<div class="col-sm-6 block-odd about-blocks" style="background-image:url('/images/HQ_9986.jpg');"></div>
			<div class="col-sm-6 block-even about-blocks" style="background-image:url('/images/HQ_9921.jpg');"></div>
		</div>
	</div>

	<hr>

	<div class="row bottom-body">
		<h1>What can we help you find?</h1>
		<div class="col-sm-4">
			<p class="glyphicon glyphicon-globe text-center"></p>
			<h3>Knowledge</h3>
			<ul>
				@Html.Partial("listHighlightedFAQItems")
			</ul>
		</div>
		<div class="col-sm-4 news-items">
			<p class="glyphicon glyphicon-list-alt text-center"></p>
			<h3>Latest News</h3>
			<ul>
				@Html.Partial("listNewsItems")
			</ul>
		</div>
		<div class="col-sm-4">
			<p class="glyphicon glyphicon-screenshot text-center"></p>
			<h3>Locations</h3>
			<ul>
				<li><a href="#">Odense, Denmark</a></li>
				<li><a href="#">Bellingham, Washington</a></li>
				<li><a href="#">Sydney, Austrailia</a></li>
				<li><a href="#">New York City, New York</a></li>
				<li><a href="#">Paris, France</a></li>
			</ul>
		</div>
	</div>
</div>

<!-- Footer Area -->
<div class="container social-area">
	<div class="row pre-footer">
		<div class="col-md-6 text-center">
			<h4>Social Media</h4>
			<div class="icons">
				<a href="#" class="facebook"></a>
				<a href="#" class="twitter"></a>
				<a href="#" class="linkedin"></a>
				<a href="#" class="github"></a>
				<a href="" class="rss"></a>
			</div>
		</div>
		<div class="col-md-6 text-center">
			<h4>Contact us</h4>
			<p>Umbraco HQ
				Haubergsvej 1<br />
				DK-5000 Odense C<br />
				+45 70 26 11 62
			</p>
		</div>
	</div>

	<div class="row base-footer">
		<div class="footer-info">
			<p class="pull-right"><a href="#">Back to top</a></p>
			<p>&#169; @(DateTime.Today.Year) Company, Inc. <a href="#">Privacy</a> | <a href="#">Terms</a></p>
		</div>
	</div>
</div>
<!-- End Footer Area -->